<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RewardsActivity"
        android:orientation="vertical"
        >
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            app:title="Rewards"
          />
<ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/rewards"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Total Coins= 937"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@color/black"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="Transaction History"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:background="@color/gray"
            android:layout_marginLeft="10dp"
           />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:id="@+id/cardview"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:text="Ride 1"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:text="Distance Travelled: 23.56 KM"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coins Earned: 235"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ride 2"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance Travelled: 36.83 KM"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coins Earned: 368"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

